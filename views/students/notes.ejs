<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2>
        <% if (keyword) { %>
          Search Results for "<%= keyword %>"
        <% } else { %>
          My Session Notes
        <% } %>
      </h2>
    </div>
    <div class="col-md-6 text-end">
      <form action="/students/notes/search" method="GET" class="d-flex">
        <input type="text" name="keyword" class="form-control me-2" placeholder="Search notes..." value="<%= keyword || '' %>">
        <button type="submit" class="btn btn-secondary">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>
  </div>

  <% if (notes.length === 0) { %>
    <div class="alert alert-info">
      <% if (keyword) { %>
        No notes found matching your search
      <% } else { %>
        You don't have any session notes yet
      <% } %>
    </div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Counselor</th>
            <th>Note</th>
          </tr>
        </thead>
        <tbody>
          <% notes.forEach(note => { %>
            <tr>
              <td><%= note.createdAt.toLocaleString() %></td>
              <td><%= note.counselor.name %></td>
              <td><%= note.content %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>