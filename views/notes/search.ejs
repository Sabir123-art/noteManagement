<div class="row mb-4">
  <div class="col-md-6">
    <h2>Search Results for "<%= keyword %>"</h2>
  </div>
  <div class="col-md-6 text-end">
    <a href="/notes" class="btn btn-secondary">Back to All Notes</a>
  </div>
</div>

<% if (notes.length === 0) { %>
  <div class="alert alert-info">No notes found matching your search</div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Student</th>
          <% if (userRole === 'counselor') { %>
            <th>Counselor</th>
          <% } %>
          <th>Note</th>
        </tr>
      </thead>
      <tbody>
        <% notes.forEach(note => { %>
          <tr>
            <td><%= note.createdAt.toLocaleString() %></td>
            <td><%= note.student.name %> (<%= note.student.studentId %>)</td>
            <% if (userRole === 'counselor') { %>
              <td><%= note.counselor.name %></td>
            <% } %>
            <td><%= note.content %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } %>